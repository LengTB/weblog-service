<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/dtd/mybatis-3-mapper.dtd"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.tobycold.mapper.SummaryMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into summarys
        <trim prefix="(" suffixOverrides="," suffix=")" >
            <if test="id != null">
                id,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="body != null">
                body,
            </if>
            <if test="routerName != null">
                routerName
            </if>
        </trim>
        <trim prefix="values(" suffixOverrides="," suffix=")">
            <if test="id != null">
                #{id},
            </if>
            <if test="title != null">
                #{title},
            </if>
            <if test="body != null">
                #{body},
            </if>
            <if test="routerName != null">
                #{routerName}
            </if>
        </trim>
    </insert>
    <select id="selectByPages" resultType="top.tobycold.pojo.SummaryEntity">
        select * from summarys limit #{page},#{total}
    </select>

</mapper>